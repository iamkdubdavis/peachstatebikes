<% if signed_in? %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h4>Add a review:</h4>
      <%= form_for([@product, @product.comments.build]) do |f| %>
        <div class="form-group">
          <%= f.label :body, "Comments" %><br />
          <%= f.text_area :body %>
        </div>
        <div class="form-group">
          <div class="rating"></div>
        </div>
        <div class="form-group">
          <%= f.submit "Submit", class: "btn btn-success" %>
        </div>
    </div>
  </div>
  <% end %>
<% end %>